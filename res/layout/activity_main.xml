<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fuppetlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout android:name="com.elaineou.stupidfuppet.FuppetActivity"
              android:id="@+id/fuppet_fragment"
              android:layout_weight="4"
              android:layout_height="0dp"
              android:layout_width="match_parent" />


    <FrameLayout android:name="com.elaineou.stupidfuppet.VoiceActivity"
              android:id="@+id/voice_fragment"
              android:layout_weight="1"
              android:layout_height="0dp"
              android:layout_width="match_parent" />

</LinearLayout>
